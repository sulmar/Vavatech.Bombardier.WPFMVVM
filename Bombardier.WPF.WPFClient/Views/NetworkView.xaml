<Window x:Class="Bombardier.WPF.WPFClient.Views.NetworkView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bombardier.WPF.WPFClient.Views"
        xmlns:vm="clr-namespace:Bombardier.WPF.ViewModels;assembly=Bombardier.WPF.ViewModels"
        mc:Ignorable="d"
        Title="NetworkView" Height="300" Width="300">

    <Window.DataContext>
        <vm:NetworkViewModel />
    </Window.DataContext>
    <Grid>

        <StackPanel>
            <Label Content="{Binding Network.Name}" />

            <ListBox ItemsSource="{Binding Network.Items}" />

        </StackPanel>
    </Grid>
</Window>
